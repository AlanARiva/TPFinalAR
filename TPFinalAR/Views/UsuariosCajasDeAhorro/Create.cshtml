@model TPFinalAR.Models.UsuarioCajaDeAhorro

@{
    ViewData["Title"] = "Alta de titulares";
}

@if (@ViewBag.Message == "nok")
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'El usuario ya es participante de la cuenta',
            footer: 'Por favor, verificar..'
        })
    </script>
}

<h1 class="h1">Alta de titulares</h1>

<h4 class="h4">Titulares</h4>
<hr />
<div class="row">
    <div class="col-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_caja" class="control-label"></label>
                <select asp-for="id_caja" class ="form-control" asp-items="ViewBag.id_caja"></select>
            </div>
            <div class="form-group">
                <label asp-for="id_usuario" class="control-label"></label>
                <select asp-for="id_usuario" class ="form-control" asp-items="ViewBag.id_usuario"></select>
            </div>
            <div class="form-group my-4">
                <input type="submit" value="Nuevo cotitular" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="container mt-5">
    <a asp-action="Index" class="btn btn-warning text-white text-decoration-none"><i class="fa fa-solid fa-backward mx-2"></i>Lista de titulares</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
