@model TPFinalAR.Models.PlazoFijo

@{
    ViewData["Title"] = "Baja de producto";
}

@if (@ViewBag.Message == "nok")
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'No se cumplido el tiempo estipulado para su eliminación o no se encuentra pagado',
            footer: 'Proba en otro momento..'
        })
    </script>
}

<h1 class="h1">Baja de producto</h1>

<h3 class="h3 text-danger">Esta seguro que desea dar de baja su plazo fijo?</h3>
<div>
    <hr />
 </div>
 <div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model._titular)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model._monto)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model._fechaIni)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model._fechaFin)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model._tasa)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model._pagado)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model._titular._id_usuario)
                </td>
                <td>
                    @Html.DisplayFor(model => model._monto)
                </td>
                <td>
                    @Html.DisplayFor(model => model._fechaIni)
                </td>
                <td>
                    @Html.DisplayFor(model => model._fechaFin)
                </td>
                <td>
                    @Html.DisplayFor(model => model._tasa)
                </td>
                <td>
                    @Html.DisplayFor(model => model._pagado)
                </td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete" class="container mt-5">
        <input type="hidden" asp-for="_id_plazoFijo" />
        <input type="submit" value="Baja de producto" class="btn btn-danger" />
    </form>
    <div class="container mt-5">
        <a asp-action="Index" class="btn btn-warning text-white text-decoration-none"><i class="fa fa-solid fa-backward mx-2"></i>Lista de cajas de ahorro</a>
    </div>
</div>
